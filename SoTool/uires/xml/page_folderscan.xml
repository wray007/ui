<?xml version="1.0" encoding="utf-8"?>
<include>
  <window pos="0,0,-0,@30">
    <text pos="0,|0" offset="0,-0.5">扫描目录:</text>
    <edit2 pos="[5,0,]-5,-0" name="edit_dir" inset="5,0,5,0" cueText="输入或者拖动文件到此"/>
    <button pos="-0,0,@50,-0" offset="-1,0" name="btn_go">go</button>
  </window>
  <splitrow pos="0,[5,-0,-0" name="split_tree" sepSize="0">
    <pane min="20" ideaSize="100">
      <treelist pos="0,[5,-0,]0" name="tree_dir" class="cls_border" treeLabel="文件树" colorBkgnd="#ffffff">
        <treectrlstyle itemHeight="25" checkBox="0" treeWidth="400"/>
        <headerstyle>
          <items>
            <item width="50">占用空间</item>
            <item width="100">文件夹占用比例</item>
          </items>
        </headerstyle>
      </treelist>
    </pane>
    <pane minSize="20" ideaSize="20" maxSize="20" show="0">
      <text pos="0,0">进度:</text>
      <progress pos="[5,5,-5,@10" name="prog_run"/>
    </pane>
  </splitrow>
</include>